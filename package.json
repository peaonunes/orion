{
  "name": "@inloco/orion",
  "version": "3.0.2",
  "description": "Semantic-UI Toolkit - In Loco theme",
  "files": [
    "**/*.js",
    "dist/orion.css",
    "dist/orion.min.css"
  ],
  "main": "./dist/index.js",
  "scripts": {
    "build:css": "gulp build",
    "build:storybook": "yarn build:css && build-storybook -o .out -s public",
    "deploy:storybook": "yarn build:storybook && storybook-to-ghpages",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepublishOnly": "npm run build:css && npm run build",
    "postpublish": "yarn deploy:storybook",
    "build": "babel ./components -d ./dist",
    "storybook": "start-storybook -p 9001 -s public",
    "watch:css": "gulp watch"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:inloco/orion.git"
  },
  "author": "In Loco Team",
  "license": "ISC",
  "homepage": "https://inloco.github.io/orion",
  "dependencies": {
    "@inloco/atomic-bomb": "^1.0.0-beta.7",
    "classnames": "^2.2.6",
    "prop-types": "^15.6.2",
    "react": "^16.6.0",
    "react-dom": "^16.6.0",
    "semantic-ui-react": "^0.87.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "@storybook/addon-actions": "^5.1.3",
    "@storybook/addon-knobs": "^5.1.3",
    "@storybook/addons": "^5.1.3",
    "@storybook/react": "^5.1.3",
    "autoprefixer": "^9.6.0",
    "babel-loader": "^8.0.6",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "enzyme-to-json": "^3.3.5",
    "gulp-add-src": "^1.0.0",
    "gulp-concat": "^2.6.1",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^8.0.0",
    "husky": "^2.4.1",
    "jest": "^24.8.0",
    "jest-junit": "^6.4.0",
    "merge-stream": "^2.0.0",
    "postcss-import": "^12.0.1",
    "prettier": "^1.14.3",
    "pretty-quick": "^1.8.0",
    "semantic-ui": "^2.4.2",
    "tailwindcss": "^1.0.4"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "jsxBracketSameLine": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "jest": {
    "testMatch": [
      "<rootDir>/components/**/?(*.)(spec|test).js?(x)"
    ],
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "output": "reports/junit/js-test-results.xml"
        }
      ]
    ],
    "setupFilesAfterEnv": [
      "<rootDir>config/jest.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  }
}
